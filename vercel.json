{
  "version": 2,
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public", "buildCommand": "npm run vercel-build" }
    }
  ],
  "routes": [
    { "src": "/api(?:/.*)?", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_OPTIONS": "-r dotenv/config"
  }
}

